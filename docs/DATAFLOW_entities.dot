// Standard Entity Definitions
// Reference diagram showing all standard entities used across MachinaMed diagrams
// Use these exact definitions to ensure visual consistency
digraph StandardEntities {
    rankdir=TB;

    // Font settings and background for readability
    graph [fontsize=14, fontname="Arial", bgcolor="#f5f5f5", style=filled, label="Standard Entity Definitions\n\nUse these exact definitions for consistency across all diagrams", labelloc=t, fontsize=16];
    node [shape=box, style=filled, fontsize=12, fontname="Arial"];
    edge [fontsize=10, fontname="Arial"];

    // Group by category
    subgraph cluster_services {
        label="Core Services";
        fillcolor=white;
        style=filled;

        FastAPI [label="FastAPI Backend\nPort 8000", fillcolor=lightgreen, shape=box];
        NextJS [label="Next.js Frontend\nPort 3000", fillcolor=lightyellow, shape=box];
        MedicalCatalog [label="Medical Catalog\nPort 8001", fillcolor=lightpink, shape=box];
    }

    subgraph cluster_databases {
        label="Databases";
        fillcolor=white;
        style=filled;

        Postgres [label="PostgreSQL\n5432", fillcolor=skyblue, shape=cylinder];
        Neo4j [label="Neo4j\n7474/7687", fillcolor=skyblue, shape=cylinder];
        Redis [label="Redis\n6379", fillcolor=skyblue, shape=cylinder];
        Qdrant [label="Qdrant\n6333", fillcolor=skyblue, shape=cylinder];
    }

    subgraph cluster_external {
        label="External Services & Clients";
        fillcolor=white;
        style=filled;

        Browser [label="Web Browser", fillcolor=lightblue, shape=box];
        GeminiAPI [label="Google Gemini API", fillcolor=plum, shape=cloud];
        GCP [label="Google Cloud Platform", fillcolor=plum, shape=cloud];
    }

    subgraph cluster_agents {
        label="Agent System";
        fillcolor=white;
        style=filled;

        AgentSystem [label="Agent System\n23 agents", fillcolor=lightcyan, shape=box];
        AgentTools [label="Agent Tools", fillcolor=cyan, shape=box];
    }

    // Note box with instructions
    note [label="USAGE:\n\nCopy these exact node definitions into your diagrams.\nThis ensures visual consistency across all documentation.\n\nExample:\n  FastAPI [label=\"FastAPI Backend\\nPort 8000\",\n           fillcolor=lightgreen,\n           shape=box];\n\nSee docs/DIAGRAMS.md for complete style guide.",
          fillcolor=white,
          shape=note,
          fontsize=11];
}
