{
  "enabledPlugins": {
    "ast-grep@ast-grep-marketplace": true
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-startup.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(command=git*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo '‚ùå ERROR: Must use /machina-git skill for git operations. Do not run git commands via Bash tool.' && exit 1"
          }
        ]
      }
    ]
  }
}
